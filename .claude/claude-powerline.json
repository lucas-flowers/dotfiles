{
  "theme": "custom",
  "display": {
    "padding": 1,
    "style": "capsule",
    "charset": "unicode",
    "colorCompatibility": "auto",
    "autoWrap": false,
    "lines": [
      {
        "segments": {
          "directory": {
            "enabled": true,
            "style": "full"
          },
          "model": {
            "enabled": true
          },
          "session": {
            "enabled": true,
            "type": "cost",
            "costSource": "official"
          },
          "today": {
            "enabled": true,
            "type": "cost"
          },
          "block": {
            "enabled": true,
            "type": "time",
            "burnType": "none"
          },
          "context": {
            "enabled": true,
            "showPercentageOnly": false,
            "displayStyle": "text"
          }
        }
      }
    ]
  },
  "colors": {
    "custom": {
      "directory": {
        "bg": "#d0d0d0",
        "fg": "#073642"
      },
      "git": {
        "bg": "#4fb3d9",
        "fg": "#ffffff"
      },
      "model": {
        "bg": "#87ceeb",
        "fg": "#000000"
      },
      "session": {
        "bg": "#da70d6",
        "fg": "#ffffff"
      },
      "block": {
        "bg": "#6366f1",
        "fg": "#ffffff"
      },
      "today": {
        "bg": "#10b981",
        "fg": "#ffffff"
      },
      "tmux": {
        "bg": "#32cd32",
        "fg": "#ffffff"
      },
      "context": {
        "bg": "#718096",
        "fg": "#ffffff"
      },
      "contextWarning": {
        "bg": "#d97706",
        "fg": "#ffffff"
      },
      "contextCritical": {
        "bg": "#dc2626",
        "fg": "#ffffff"
      },
      "metrics": {
        "bg": "#6b7280",
        "fg": "#ffffff"
      },
      "version": {
        "bg": "#8b7dd8",
        "fg": "#ffffff"
      }
    }
  },
  "budget": {
    "session": {
      "amount": 0
    },
    "today": {
      "amount": 0
    }
  },
  "modelContextLimits": {
    "sonnet": 200000
  }
}
