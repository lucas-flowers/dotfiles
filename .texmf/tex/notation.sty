% Calculus
\newcommand{\Curl}[1]{\nabla \times #1}                               % Curl
\newcommand{\Div}[1]{\nabla \cdot #1}                                 % Divergence
\newcommand{\Grad}[1]{\nabla #1}                                      % Gradient
\newcommand{\Deriv}[2]{\frac{\mathrm{d}#1}{\mathrm{d}#2}}             % First derivative
\newcommand{\nDeriv}[3]{\frac{\mathrm{d}^{#3}#1}{\mathrm{d}#2^{#3}}}  % The nth derivative
\newcommand{\pDeriv}[2]{\frac{\partial#1}{\partial#2}}                % Partial derivative
\newcommand{\npDeriv}[3]{\frac{\partial^{#3}#1}{\partial#2^{#3}}}     % The nth partial derivative
\newcommand{\IntA}[2]{\int {#1} \mathrm{\ d}{#2}}                     % Definite integral
\newcommand{\IntB}[3]{\int_{#3} {#1} \mathrm{\ d}{#2}}                % Integral with path label
\newcommand{\IntC}[4]{\int_{#3}^{#4} {#1} \mathrm{\ d}{#2}}           % Indefinite integral
\newcommand{\oIntA}[2]{\oint {#1} \mathrm{\ d}{#2}}                   % Definite loop integral
\newcommand{\oIntB}[3]{\oint_{#3} {#1} \mathrm{\ d}{#2}}              % Loop integral with path label
\newcommand{\oIntC}[4]{\oint_{#3}^{#4} {#1} \mathrm{\ d}{#2}}         % Indefinite loop integral
\newcommand{\SumA}[2]{\sum_{#2}{#1}}                                  % Sums
\newcommand{\SumB}[3]{\sum_{#2}^{#3} {#1}}                            %
\newcommand{\SumC}[4]{\sum_{{#2}={#3}}^{#4}{#1}}                      %
\newcommand{\ProdA}[2]{\prod_{#2}{#1}}                                % Products
\newcommand{\ProdB}[3]{\prod_{#2}^{#3} {#1}}                          %
\newcommand{\ProdC}[4]{\prod_{{#2}={#3}}^{#4}{#1}}                    %
\newcommand{\LimA}[2]{\lim_{#2} {#1}}                                 % Limits
\newcommand{\LimB}[3]{\lim_{{#2} \to {#3}} {#1}}                      %

