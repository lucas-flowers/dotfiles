{
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline --theme=light",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/check-focus-and-notify.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/check-focus-and-notify.sh"
          }
        ]
      }
    ]
  }
}
